import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int r = s.nextInt();
		int space = r-1;
		int star = 1;
		for(int i=1;i<=r;i++){
		    for(int j=1;j<=space;j++){
		        System.out.print(" ");
		    }
		    for(int k=1;k<=star;k++){
		        System.out.print("*");
		    }
		    space--;
		    star++;
		    System.out.println();
		}
	}
}
